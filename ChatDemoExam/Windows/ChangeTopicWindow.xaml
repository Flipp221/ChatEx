<Window x:Class="ChatDemoExam.Windows.ChangeTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatDemoExam.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChangeTopicWindow" Height="180" Width="350">
    <Grid>
        <TextBox Text="{Binding Topic}"  x:Name="TBNave"  Margin="0,0,0,0" Width="300" Height="20" Background="#FFE4D1D1" />
        <Button x:Name="BTNSave" Content="Save" Margin="0,90,0,0" Width="100" Height="20" Click="BTNSave_Click" Background="#FF73FF67"/>
    </Grid>
</Window>
